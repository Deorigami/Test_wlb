<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ardinata.test.wlb.molecule.RadioButtonWithText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ascSort"
        app:title="Ascending"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.ardinata.test.wlb.molecule.RadioButtonWithText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="@id/ascSort"
        android:id="@+id/dscSort"
        app:title="Descending"
        app:layout_constraintStart_toEndOf="@id/ascSort"
        />
</androidx.constraintlayout.widget.ConstraintLayout>