<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ardinata.test.test_goplay.template.SimpleHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Detail"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/simpleHeader"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/simpleHeader"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imageContainer"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:minHeight="200dp"
                    android:background="@color/cloudyBlue"
                    android:id="@+id/poster"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/imageContainer"
                android:layout_marginTop="16dp"
                android:id="@+id/gameTitle"
                android:textAppearance="@style/TextAppearance.H3"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Paragraph"
                app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

            <com.ardinata.test.test_goplay.template.IngredientsGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredientList"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:paddingBottom="16dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>