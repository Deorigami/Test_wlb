<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ardinata.test.wlb.template.SimpleHeader
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        app:hasFavButton="false"
        app:hasBackButton="false"
        app:title="@string/drinks_detail_page_navbar_title"
        />
    <com.ardinata.test.wlb.template.group.CardGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cardGameList"
        android:paddingHorizontal="24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>